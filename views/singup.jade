extends ./layout.jade
block contenido
    div(class="col-md-8 remove-float center-block text-center big-top-space")
        form(action="/users", method="post", class="form-horizontal")
            div(class="form-group")
                label(for="email",  class="col-sm-2 control-label") EMAIL
                div(class="col-sm-10")
                    input(class="form-control", type="text", name="email", placeholder="Email", id="email")
            div(class="form-group")
                label(for="password",  class="col-sm-2 control-label") Contraseña
                div(class="col-sm-10")
                    input(class="form-control", type="password", name="password", placeholder="Password", id="password")
            div(class="form-group")
                label(for="password_confirmation", class="col-sm-2 control-label") Confirma contraseña
                div(class="col-sm-10")
                    input(class="form-control", type="password", name="password_confirmation", placeholder="Password", id="password_confirmation")
            div(class="form-group")
                label(for="username", class="col-sm-2 control-label") Nombre de usuario
                div(class="col-sm-10")
                    input(class="form-control", type="text", name="username", placeholder="username", id="username")
            div( class="col-sm-offset-2 col-sm-10")
                button( type="submit" class="btn btn-info") Regístrame
                a(href="/login", class="margin-left") Iniciar sesión